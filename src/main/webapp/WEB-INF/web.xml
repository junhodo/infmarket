<?xml version="1.0" encoding="UTF-8"?>
<web-app
xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
xmlns="http://xmlns.jcp.org/xml/ns/javaee"
xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" version="3.1">
<servlet>
    <servlet-name>MyBatisInitializer</servlet-name>
    <servlet-class>infMarket.models.mybatis.config.MyBatisConfig</servlet-class>
    <load-on-startup>1</load-on-startup>
</servlet>

<filter>
    <filter-name>CharacterEncodingFilter</filter-name>
    <filter-class>infMarket.filters.CharacterEncodingFilter</filter-class>
    <init-param>
        <param-name>encoding</param-name>
        <param-value>UTF-8</param-value>
    </init-param>
</filter>
<filter-mapping>
    <filter-name>CharacterEncodingFilter</filter-name>
    <url-pattern>/*</url-pattern>
</filter-mapping>

<filter>
    <filter-name>MemberAuthorityFilter</filter-name>
    <filter-class>infMarket.filters.MemberAuthorityFilter</filter-class>
</filter>
<filter-mapping>
    <filter-name>MemberAuthorityFilter</filter-name>
    <url-pattern>/write</url-pattern>
</filter-mapping>



<welcome-file-list>
    <welcome-file>/siteInfo/siteInfo.jsp</welcome-file>
</welcome-file-list>

<servlet>
    <servlet-name>register</servlet-name>
    <jsp-file>/member/register.jsp</jsp-file>
</servlet>
<servlet-mapping>
    <servlet-name>register</servlet-name>
    <url-pattern>/register</url-pattern>
</servlet-mapping>

<servlet>
    <servlet-name>forgot</servlet-name>
    <jsp-file>/member/forgot.jsp</jsp-file>
</servlet>
<servlet-mapping>
    <servlet-name>forgot</servlet-name>
    <url-pattern>/forgot</url-pattern>
</servlet-mapping>


<servlet-mapping>
    <servlet-name>login</servlet-name>
    <url-pattern>/login</url-pattern>
</servlet-mapping>
    <servlet>
        <servlet-name>login</servlet-name>
        <jsp-file>/member/login.jsp</jsp-file>
    </servlet>

<servlet>
    <servlet-name>attendance</servlet-name>
    <jsp-file>/member/attendance.jsp</jsp-file>
</servlet>
<servlet-mapping>
    <servlet-name>attendance</servlet-name>
    <url-pattern>/attendance</url-pattern>
</servlet-mapping>

<servlet>
    <servlet-name>wishlist</servlet-name>
    <jsp-file>/wishlist/randomWishlist.jsp</jsp-file>
</servlet>
<servlet-mapping>
    <servlet-name>wishlist</servlet-name>
    <url-pattern>/wishlist</url-pattern>
</servlet-mapping>

<servlet>
    <servlet-name>post</servlet-name>
    <jsp-file>/post/postList.jsp</jsp-file>
</servlet>
<servlet-mapping>
    <servlet-name>post</servlet-name>
    <url-pattern>/freeboard/*</url-pattern>
</servlet-mapping>

<servlet>
    <servlet-name>postWrite</servlet-name>
    <jsp-file>/post/write.jsp</jsp-file>
</servlet>
<servlet-mapping>
    <servlet-name>postWrite</servlet-name>
    <url-pattern>/post/write</url-pattern>
</servlet-mapping>

<servlet>
    <servlet-name>postModify</servlet-name>
    <jsp-file>/post/modify.jsp</jsp-file>
</servlet>
<servlet-mapping>
    <servlet-name>postModify</servlet-name>
    <url-pattern>/post/modify/*</url-pattern>
</servlet-mapping>

<servlet>
    <servlet-name>postDetail</servlet-name>
    <jsp-file>/post/postDetail.jsp</jsp-file>
</servlet>
<servlet-mapping>
    <servlet-name>postDetail</servlet-name>
    <url-pattern>/post/detail/*</url-pattern>
</servlet-mapping>

<servlet>
    <servlet-name>sellPostDetail</servlet-name>
    <jsp-file>/sellPost/sellPostDetail.jsp</jsp-file>
</servlet>
<servlet-mapping>
    <servlet-name>sellPostDetail</servlet-name>
    <url-pattern>/sell/detail/*</url-pattern>
</servlet-mapping>

<servlet>
    <servlet-name>sellPostList</servlet-name>
    <jsp-file>/sellPost/sellPostList.jsp</jsp-file>
</servlet>
<servlet-mapping>
    <servlet-name>sellPostList</servlet-name>
    <url-pattern>/sellboard/*</url-pattern>
</servlet-mapping>

<servlet>
    <servlet-name>sellPostWrite</servlet-name>
    <jsp-file>/sellPost/write.jsp</jsp-file>
</servlet>
<servlet-mapping>
    <servlet-name>sellPostWrite</servlet-name>
    <url-pattern>/sell/write</url-pattern>
</servlet-mapping>

<servlet>
    <servlet-name>sellPostModify</servlet-name>
    <jsp-file>/sellPost/modify.jsp</jsp-file>
</servlet>
<servlet-mapping>
    <servlet-name>sellPostModify</servlet-name>
    <url-pattern>/sell/modify/*</url-pattern>
</servlet-mapping>


<servlet>
    <servlet-name>admin</servlet-name>
    <jsp-file>/admin/admin.jsp</jsp-file>
</servlet>
<servlet-mapping>
    <servlet-name>admin</servlet-name>
    <url-pattern>/admin</url-pattern>
</servlet-mapping>
